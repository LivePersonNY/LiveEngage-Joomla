<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.1.0" client="site" method="upgrade">
    <name>Live Person LiveEngage Chat</name>
    <author>Live Person</author>
    <version>1.0.0</version>
    <description>Install Live Person Live Engage chat widget</description>
    <files>
        <filename plugin="plg_liveengage">plg_liveengage.xml</filename>
        <filename plugin="plg_liveengage">plg_liveengage.php</filename>
        <filename>index.html</filename>
        <filename plugin="plg_liveengage">tmpl/snippet.php</filename>
    </files>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field
                        name="livepersonaccountnumber"
                        type="text"
                        label="Enter your LivePerson account #"
                        description="Enter your LivePerson account #" />
            </fieldset>
        </fields>
    </config>
</extension>